<div class="text-center">
    <h1>{{name}}</h1>
    <p>{{description}}</p>
    <p>Posted by {{user.name}} on {{format_date date_created}}</p>


    {{#if logged_in}}
    <!--check if user logged in-->
    {{#if comments.length}}
    <!--check if comments exist-->
</div>
<div>
    <h2>Comments:</h2>
    {{#each comments as |comment|}}
    <p>Comment from user #{{user_id}} on {{format_date comment.date_created}}</p>
    <p>{{comment.content}}</p>
    <div class="col-md-4">
        <button class="btn btn-sm btn-danger deleteBtn" data-id="{{comment.id}}">DELETE</button>
    </div>
    {{/each}}

    {{else}}
    <!--if no comments exist-->
    <p>No comments</p>

    {{/if}}


    <form class="form new-comment-form mt-4">
        <div class="form-group">
            <label for="post-comments">Add a comment:</label>
            <input class="form-input" type="text" id="comments" name="post-comments" />
            <button class="btn btn-primary submitBtn" type="submit" data-id="{{id}}">Submit</button>
        </div>
    </form>

    {{#if match}}
    <div class="row mb-2">
        <div class="col-md-12">
            <h3>Update post: </h3>
            <form class="form new-post-form">
                <div class="form-group">
                    <label for="post-name-updates">Post name:</label>
                    <input class="form-input" type="text" id="post-name-updates" name="post-name-updates" />
                </div>
                <div class="form-group">
                    <label for="post-desc-updates">description:</label>
                    <textarea class="form-input" id="post-desc-updates" name="post-desc-updates"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-secondary updateBtn" update-id="{{id}}">UPDATE</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{/if}}

{{/if}}
<script src="/post.js"></script>